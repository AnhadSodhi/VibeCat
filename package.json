{
  "name": "vibecat",
  "displayName": "VibeCat",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibecat.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibecat-sidebar",
          "title": "VibeCat",
          "icon": "assets/vibecat.gif"
        }
      ]
    },
    "views": {
      "vibecat-sidebar": [
        {
          "type": "webview",
          "id": "vibeCatView",
          "name": "VibeCat"
        }
      ]
    },
    "configuration": {
      "title": "VibeCat",
      "properties": {
        "vibecat.customGifPath": {
          "type": "string",
          "default": "",
          "description": "Path to a custom GIF file. Leave empty to use the default VibeCat GIF."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "gif-frames": "^1.0.1"
  }
}
